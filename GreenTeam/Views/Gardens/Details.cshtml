@model GreenTeam.ViewModels.GardenView

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Garden.Name)</></h1>
<h4>@Html.DisplayFor(model => model.Garden.Location)</></h4>


<p>
    <a asp-controller="Patches" asp-action="Create" asp-route-id="@Model?.Garden.Id">Add Patch</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Garden.Id">Edit Garden</a> |
    <a asp-action="Index">Back to List</a>
</p>

<table class="table">

     <thead>
        <tr>
            <th>Patch Name:</th>
            <th>Crop Name:</th>  
        </tr>
    </thead>
   @foreach(var item in Model.Patches)
    {
    <tbody>
    
        <tr>
             <td><a asp-controller="Patches" asp-action="Edit" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.PatchName)
                </a>
            </td>
            <td>
               <a asp-controller="Patches" asp-action="Edit" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Crop)
                </a>
            </td>
             <td>
            </td>
            <td>
                <a asp-controller="Patches" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

       </tr>
        
    
    </tbody>
    }
    <thead class="MemberTable">
        <tr>
            <th>Members:</th>
        </tr>
    </thead>
      @foreach(var item in Model.GardenUsers)
    {
    <tbody>
    
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
             <td>
            </td>
       </tr>
           
    </tbody>
    }
    </table>