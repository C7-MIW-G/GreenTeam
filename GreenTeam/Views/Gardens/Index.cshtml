@model IEnumerable<GreenTeam.ViewModels.GardenVM>

@{
    ViewData["Title"] = "Gardens";
}

<h1>Gardens</h1>

<p>
    <a class="btn btn-action" asp-action="Create">Create New Garden</a>
</p>

<table class="table  table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr scope="row" class="alnleft">
                <td>
                    <a class="table-content" asp-action="Details" asp-route-id="@item.Id">
                        &#127793; @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
