@model GreenTeam.Models.PatchTask

@{
    ViewData["Title"] = "Create Task";
}

<h1>Create</h1>

<h4>Task</h4>
<a class ="btn btn-action" asp-action="Index">Back to List</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PatchId" value=@Url.ActionContext.RouteData.Values["id"] />
             <div class="form-group">
                <label asp-for="TaskName" class="control-label">Task:</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label">Description:</label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-action" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}