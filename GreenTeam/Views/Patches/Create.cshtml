@model GreenTeam.Models.Patch

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GardenId" value=@Url.ActionContext.RouteData.Values["id"] />
            <div class="form-group">
                <label asp-for="Crop" class="control-label"></label>
                <input asp-for="Crop" class="form-control" />
                <span asp-validation-for="Crop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
