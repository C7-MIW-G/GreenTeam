@model GreenTeam.ViewModels.PatchVM
@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.PatchName)</h1>
<h3>@Html.DisplayFor(model => model.Crop)</h3>

<p>
    @if (Model.isGardenManager)
    {
        <a class="btn btn-action" asp-controller="PatchTasks" asp-action="Create" asp-route-id="@Model?.Id">&#10010; Task</a>
        <a class="btn btn-action" asp-action="Edit" asp-route-id="@Model?.Id">&#9998; Patch</a>
    }
    <a class="btn btn-action" asp-controller="Gardens" asp-action="Details" asp-route-id="@Model?.GardenId">&#10096; Back to List</a>
</p>

<table class="table table-hover">


    @foreach (var item in Model.PatchTasks)
    {
        <tbody>
            @if (item.IsCompleted == false)
            {
                <tr scope="row" class="alnleft">
                    <td>
                        @if (Model.isGardenManager)
                        {
                            <a asp-controller="PatchTasks" asp-action="Edit" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.TaskName)
                            </a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.TaskName)
                        }
                    </td>
                    <td>
                        @if (Model.isGardenManager)
                        {
                            <a asp-controller="PatchTasks" asp-action="Edit" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.TaskDescription)
                            </a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.TaskDescription)
                        }
                    </td>
                </tr>
            }
            else
            {
                <tr scope="row" class="alnleft">
                    <td>
                        @if (Model.isGardenManager)
                        {
                            <a asp-controller="PatchTasks" asp-action="Edit" asp-route-id="@item.Id">
                                <del>@Html.DisplayFor(modelItem => item.TaskName)</del>
                            </a>
                        }
                        else
                        {
                            <del>@Html.DisplayFor(modelItem => item.TaskName)</del>
                        }
                    </td>
                    <td>
                        @if (Model.isGardenManager)
                        {
                            <a asp-controller="PatchTasks" asp-action="Edit" asp-route-id="@item.Id">
                                <del>@Html.DisplayFor(modelItem => item.TaskDescription)</del>
                            </a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.TaskDescription)
                        }
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
