@model GreenTeam.Models.Patch

@{
    ViewData["Title"] = "Edit Patch";
}

<h1>Edit</h1>

<h4>Patch</h4>
<a class="btn btn-action" asp-action="Index">Back to List</a>
<hr />
<div class="row">
    <div class="col-md-4"> 
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GardenId" />
            <div class="form-group">
                <label asp-for="PatchName" class="control-label">Patch Name:</label>
                <input asp-for="PatchName" class="form-control" />
                <span asp-validation-for="PatchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crop" class="control-label">Crop Name:</label>
                <input asp-for="Crop" class="form-control" />
                <span asp-validation-for="Crop" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-action" />
                <a class="btn btn-action" asp-controller="Gardens" asp-action="Details" asp-route-id="@Model.GardenId">Cancel</a>
            </div>
        </form>
    </div>
</div>

<br />
<br />

<dl class="row">
        <dd class = "col-sm-10">
            Do you want to delete @Html.DisplayFor(model => model.PatchName) containing @Html.DisplayFor(model => model.Crop)?
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
           <input type="submit" value="Delete" class="btn btn-danger" />  
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
